@model pweb1920.Models.ViewModels.ReservationDetailsViewModel
<style type="text/css">
    div.modal-body .row .col-md-4 p {
        text-align: right;
        font-weight: bold;
    }

    div.modal-body .row .col-md-8 p {
        text-align: center;
    }

    h4.modal-title {
        font-weight: bolder;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">
        @Html.DisplayFor(model => model.Date) - @Html.DisplayFor(model => model.StationName)
        <span class="small">
            Reservation #@Html.DisplayFor(model => model.Id)
        </span>
    </h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-4">
            <p>
                @Html.DisplayNameFor(model => model.ServiceCode)
            </p>
        </div>
        <div class="col-md-8">
            <p>
                @Html.DisplayFor(model => model.ServiceCode)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <p>
                Time
            </p>
        </div>
        <div class="col-md-8">
            <p>
                @Html.DisplayFor(model => model.TimeStart) to @Html.DisplayFor(model => model.TimeFinish)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <p>
                @Html.DisplayNameFor(model => model.EstimatedCost)
            </p>
        </div>
        <div class="col-md-8">
            <p>
                @Html.DisplayFor(model => model.EstimatedCost)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <p>
                @Html.DisplayNameFor(model => model.Status)
            </p>
        </div>
        <div class="col-md-8">
            <p>
                @Html.DisplayFor(model => model.Status)
            </p>
        </div>
    </div>
</div>
@if (User.IsInRole("Admin"))
{
<div class="modal-footer">
    <a class="btn btn-info btn-sm pull-right" href="@Url.Action("Edit", "Reservations", new { id = Model.Id })" role="button">
        <span class="glyphicon glyphicon glyphicon-edit"></span> Edit
    </a>
</div>
}
