@model pweb1920.Models.DTO.IndexStationDTO

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Search", "Stations")">
                    <span class="glyphicon glyphicon-list"></span>
                </a>
            </li>
            <li class="active">
                @Model.SelectedDistrict.District
            </li>
        </ol>
        <h2>
            Search
            <small>by Cities</small>
        </h2>
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>
                            City
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Stations)
                    {
                        <tr onclick="location.href = '@(Url.Action("Search", "Stations", new { district = item.Id, city = item.Id }))'" style="cursor: pointer" class="row-hover">
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("Index", "Stations")" role="button">
            <span class="glyphicon glyphicon-share-alt"></span> Back to List
        </a>
    </div>
</div>