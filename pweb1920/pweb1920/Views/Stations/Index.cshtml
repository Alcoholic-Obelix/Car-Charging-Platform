@model IEnumerable<pweb1920.DAL.Station>

@{
    ViewBag.Title = "Stations";
}

<div class="row">
    <div class="col-md-12">
        <h2>
            <span>Stations</span>
            <a class="btn btn-default btn-sm pull-right" href="@Url.Action("Search", "Stations")" role="button">
                <span class="glyphicon glyphicon glyphicon-search"></span> Search
            </a>
        </h2>
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StreetAdress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.District)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="location.href = '@(Url.Action("Details", "Stations", new { id = item.Id }))'" style="cursor: pointer" class="row-hover">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StreetAdress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.District)
                            </td>
                        </tr>
                    }
                    @for (var i = 0; i < (10 - Model.Count()); i++)
                    {
                        <tr>
                            <td>
                                --
                            </td>
                            <td>
                                --
                            </td>
                            <td>
                                --
                            </td>
                            <td>
                                --
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>