@model pweb1920.Models.DTO.IndexStationDTO

@{
    ViewBag.Title = "Stations";
}

<h2>Cities</h2>

<ol class="breadcrumb">
    <li class="active">@Html.ActionLink(Model.SelectedDistrict.District, "Index", "Stations")</li>
</ol>
<table class="table">
    <tr>
        <th>
            City
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Stations)
    {
        <tr>
            <td>
                @Html.ActionLink(item.City.ToString(), "Index", "Stations", new { district = item.Id, city = item.Id }, null)

            </td>
        </tr>
    }

</table>