@model pweb1920.Models.DTO.IndexStationDTO

@{
    ViewBag.Title = "Cities";
}

<h2>Cities</h2>

<table class="table">
    <tr>
        <th>
            City
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Stations)
    {
        <tr>
            <td>
                @Html.ActionLink(item.City.ToString(), "Index", "Stations", new { district = item.Id, city = item.Id }, null)

            </td>
        </tr>
    }

</table>