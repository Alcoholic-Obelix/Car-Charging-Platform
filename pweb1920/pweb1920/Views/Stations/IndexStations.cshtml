@model pweb1920.Models.DTO.IndexStationDTO

@{
    ViewBag.Title = "Stations";
}

<h2>Stations</h2>

<table class="table">
    <tr>
        <th>
            Station
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Stations)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name.ToString(), "Details", "Stations", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>