@model pweb1920.Models.DTO.IndexStationDTO

@{
    ViewBag.Title = "Stations";
}

<h2>Stations</h2>

<ol class="breadcrumb">
    <li>@Model.SelectedDistrict.District</li>
    <li class="active"><a href="#">@Html.ActionLink(Model.SelectedCity.City, "Index", "Stations", new { district = Model.SelectedDistrict.Id }, null)</a></li>
</ol>
<table class="table">
    <tr>
        <th>
            Station
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Stations)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name.ToString(), "Details", "Stations", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>